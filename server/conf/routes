GET     /                           controllers.Application.index

GET     /lectures                   controllers.Lectures.list(search: Option[String])
POST    /lectures                   controllers.Lectures.create
GET     /lectures/:id               controllers.Lectures.details(id)
DELETE  /lectures/:id               controllers.Lectures.delete(id)
PUT     /lectures/:id/mapping       controllers.Lectures.addMapping(id)
GET     /lectures/:fileId/pdf       controllers.Lectures.download(fileId)